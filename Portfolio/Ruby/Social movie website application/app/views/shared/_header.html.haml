%nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
  .container-fluid
    %a.navbar-brand{href: "/"} Streamify
    %button.navbar-toggler{"aria-controls" => "navbarSupportedContent", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-bs-target" => "#navbarSupportedContent", "data-bs-toggle" => "collapse", type: "button"}
      %span.navbar-toggler-icon
    #navbarSupportedContent.collapse.navbar-collapse
      %ul.navbar-nav.me-auto.mb-2.mb-lg-0
        %li.nav-item
          %a.nav-link{href: "/recommendations"} #{t('.recommendations')}
        - if user_signed_in?
          %li.nav-item
            %a.nav-link{href: "/friends"} #{t('.friends')}
          %li.nav-item
            %a.nav-link{href: edit_user_registration_path} #{t('.profile')}
          %li.nav-item
            %a.nav-link{href: destroy_user_session_path} #{t('.logout')}
        -else
          %li.nav-item
            %a.nav-link{href: new_user_session_path} #{t('.login')}
          %li.nav-item
            %a.nav-link{href: new_user_registration_path} #{t('.sign_up')}
