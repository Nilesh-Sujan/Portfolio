= form_for @history do |f|
  - if @history.errors.any?
    #error_explanation
      %h2= "#{pluralize(@history.errors.count, "error")} prohibited this history from being saved:"
      %ul
        - @history.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :User_id
    = f.number_field :User_id
  .field
    = f.label :Stream_id
    = f.number_field :Stream_id
  .field
    = f.label :watch_time
    = f.number_field :watch_time
  .field
    = f.label :Rated
    = f.check_box :Rated
  .field
    = f.label :Date_watched
    = f.text_field :Date_watched
  .actions
    = f.submit 'Save'
